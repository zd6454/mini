<!--pages/my/publishforum/index.wxml-->
<view class="page">
   <view class="head">
      <view>标题:</view>
      <view class="title"><input  type="text"  value="" placeholder="请输入标题"/>
      </view>
   </view>
   <view class="body">
     <view > 封面:</view>
     <view>
      <mp-cells>
            <mp-cell>
                <mp-uploader  bindfail="uploadError" bindsuccess="uploadSuccess" select="{{selectFile}}" upload="{{uplaodFile}}" files="{{files}}" max-count="2" ></mp-uploader>
            </mp-cell>
        </mp-cells>
     </view>
   </view>
   <view class="foot">
     <view>正文:</view>
     <view >
       <textarea placeholder='请编辑内容' maxlength='500' auto-focus  bindinput></textarea>
     </view>
   </view>
   <view class="comfirm">
     <button type="primary" size="mini" class="button"  hover-class="button2">保存</button>
     <button type="primary" size="mini" class="button"  hover-class="button2">发布</button>
   </view>
</view>
