/**index.wxss**/
page{
  background-color: #f9f9f9;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.swiperWrap{
  width: 95%;
  margin: auto;
  height: 350rpx;
}

.school{
  margin-top: 100rpx;
  margin: auto;
  width: 90%;
  margin-top: 20rpx;
}
.school .text{
  font-size: 45rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 15rpx;
}
.school .line{
  width: 25%;
  height: 7rpx;
  background-color: #f59a23;
  margin: auto;
}
.school .block{
  height: 20rpx;
}
.school .boxWrap{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  align-content: flex-start;
}

.school .boxWrap .box{
  width: 45%;
  height: 170rpx;
  background-color: #b8b7b7;
  margin: 15rpx;
  border: 2rpx white solid;
  box-shadow:#b8b7b7 10rpx 10rpx 8rpx -5rpx;
  display: flex;
  flex-direction: row;
}
.school .boxWrap .box .boxTxt{
  color: white;
  width: 60%;
  height: 100%;
  font-size: 30rpx;
  line-height: 160rpx;
  text-align: center;
}
.school .boxWrap .box .boxImg{
  width: 100rpx;
  height: 100rpx;
  margin: 32rpx 20rpx;
}
.school .leason{
  height: 180rpx;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  border:4rpx #f4f4f4 solid;
}

.school .leason .leaImgWrap{
  height: 180rpx;
  width: 200rpx;
  box-shadow: #b8b7b7 10rpx 0rpx 8rpx -5rpx;
  background-color: #fbce29;
}
.school .leason .leaImgWrap .leaImg{
  position: relative;
  top: 0;
  height: 120rpx;
  width: 120rpx;
  margin: 30rpx 40rpx;
}
.school .leason .txtWrap{
  margin-left: 30rpx;
  margin-top: 20rpx;
  width: 100%;
}
.school .leason .txtWrap .edu{
  font-weight: 600;
  font-size: 35rpx;
  margin-bottom: 15rpx;
}
.school .leason .txtWrap .look{
  font-size: 28rpx;
  font-weight: 400;
}
.school .leason0{
  height: 180rpx;
  display: flex;
  flex-direction: row-reverse;
  background-color: #f2f2f2;
  border:4rpx white solid;
}
.school .leason0 .leaImgWrap{
  height: 180rpx;
  width: 200rpx;
  box-shadow: #b8b7b7 -10rpx 0rpx 8rpx -5rpx;
  background-color: #fbce29;
}
.school .leason0 .leaImgWrap .leaImg{
  position: relative;
  top: 0;
  height: 120rpx;
  width: 120rpx;
  margin: 30rpx 40rpx;
}
.school .leason0 .txtWrap{
  margin-left: 30rpx;
  margin-top: 20rpx;
  width: 100%;
}
.school .leason0 .txtWrap .edu{
  font-weight: 600;
  font-size: 35rpx;
  margin-bottom: 15rpx;
}
.school .leason0 .txtWrap .look{
  font-size: 28rpx;
  font-weight: 400;
}

.school .more{
  margin-top: -50rpx;
  font-size: 35rpx;
  float: right;
}
.school .activity{
  height: 220rpx;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  box-shadow: 0 5rpx 10rpx 10rpx #e7e7e7;
  margin-top: 20rpx;
}

.school .activity .actImgWrap{
  height: 180rpx;
  width: 180rpx;
  /* box-shadow: #b8b7b7 10rpx 0rpx 8rpx -5rpx; */
  background-color: #cccccc;
  margin: 20rpx;
}
.school .activity .actImgWrap .actImg{
  position: relative;
  top: 0;
  height: 150rpx;
  width: 150rpx;
  margin: 15rpx;
  border: 2rpx white solid;
}
.school .activity .txtWrap{
  margin-left: 20rpx;
  margin-top: 20rpx;
  width: 100%;
  position: relative;
}
.school .activity .txtWrap .title{
  font-weight: 600;
  font-size: 33rpx;
  /* margin-bottom: 15rpx; */
}
.school .activity .txtWrap .time{
  font-size: 28rpx;
  font-weight: 400;
  position: absolute;
  bottom: 20rpx;
}

.school .friendTitle{
  font-weight: 600;
  font-size: 35rpx;
  display: inline;

}
.school .more0{
  display: inline;
  font-size: 35rpx;
  float: right;
}
.school .friend{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.school .friend .friendWrap{
  height: 450rpx;
  width: 47%;
  /* box-shadow: #b8b7b7 10rpx 0rpx 8rpx -5rpx; */
  background-color: white;
  margin-top: 20rpx;
  border: 2rpx #cccccc solid;
}
.school .friend .friendWrap .imageWrap{
  height: 390rpx;
  width: 100%;
  background-color: #cccccc;
}
.school .friend .friendWrap .imageWrap .friImg{
  position: relative;
  top: 0;
  height: 340rpx;
  width: calc(100% - 50rpx);
  margin: 20rpx;
  border: 5rpx white solid;
}
.school .friend .friTitle{
  text-align: center;
  justify-content: center;
}
