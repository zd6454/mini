/* pages/my/index.wxss */
.page{
  background: #ecf1f1;
  width: 100vw;
  height:100vh;
}
.head{
  display: flex;
  height: 250rpx;
  border-radius: 2%;
  margin: 0rpx 20rpx;
  background-color: rgb(2, 68, 99);
  padding: 40rpx;
  border-bottom-right-radius:150rpx;
  border-bottom-left-radius:150rpx;
}
.avatar{
  align-items: center;
  margin-left: 65rpx;
}
.imageset{
  border-radius: 50%;
  background-color: darkgray;
  width:150rpx;
  height:150rpx;
}
.info{
  color: #ffffff;
  font-size: 25rpx;
}
.name{
  font-size: 45rpx;
}
.base{
  display: flex;
  margin: 10rpx;
}
.level{
  margin-left: 20rpx;
}
.school{
  margin-bottom: 10rpx;
}
.body{
  background-color: #a88b61;
  margin:-110rpx 40rpx;
  border-radius: 5rpx;
  height:140rpx;
  color:#ffffff;
  display: flex;
  justify-content: space-around;
}
.tabs{
}
.tab{
 margin: 20rpx;
 font-size: 25rpx;
 text-align: center;
}
.tabIcon{
  width:70rpx;
  height:70rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.foot{
  margin: 180rpx 20rpx 0rpx 20rpx;
  background-color: #ffffff;
  border-radius: 2rpx;
}
.setting{
  color:rgb(2, 68, 99);
  display: flex;
  padding: 20rpx ;
  margin:  10rpx 20rpx 0rpx 20rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #d3d4ca;
}
.detail{
  font-size: 35rpx;
  font-weight: bold;
}
.login{
  margin:30rpx;
}
.loginOut{
  color:rgb(2, 68, 99);
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
}