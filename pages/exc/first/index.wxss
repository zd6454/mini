.page{
  background: #ecf1f1;
  width: 100vw;
  height:100vh;
}
.body{
  width: 95%;
  margin-top: 100rpx;
  margin: auto;
  margin-bottom: 20rpx;
}
.top{
  margin-top: 20rpx;
}
.title{
  font-weight: 1000;
  font-size: 33rpx;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}
.author{
  font-weight: 500;
  font-size: 30rpx;
}
.ImgWrap{
  height: 300rpx;
  width: 95%;
  margin: 0rpx;
}
.txt{
  font-weight: 500;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.reply{
  margin:20rpx;
}
.total{
  font-size: 30rpx;
  color:gray;
}
.box{
  margin-top:20rpx;
}
.inline{
  display: flex;
  justify-content: space-between;
}
.head{
  display: flex;
  flex-direction:row;
  align-items:center;
}
.avatar{
  width:64rpx;
  height:64rpx;
  border-radius: 50%;
}
.username{
  margin-left: 20rpx;
  font-size: 30rpx;
}
.content{
  margin-top: 10rpx;
  font-size: 33rpx;
  color: gray;
  margin-left: 20rpx;
  text-indent:2em;
}
.time{
  font-size: 24rpx;
  color: gray;
}
.userPublish{
  position: fixed;
  bottom:20rpx;
  left:20rpx;
}
.form{
  display: flex;
  justify-content: space-between;
}
.textarea{
   height:50rpx;
   width:80rpx;
   border: 2rpx solid  gray;
}
.buttonset{
  position: fixed;
}
button[type='default'] {
  color: rgb(2, 68, 99) !important;
}
