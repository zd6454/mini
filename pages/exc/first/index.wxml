<view class="page">
<view class="body">
<div class="top" wx:for="{{activityList}}" wx:key="item" data-set="{{item}}" wx:for-item="item" wx:for-index="index">
  <view class="title">{{item.title}}</view>
  <view class="txtWrap">
    <view class="author">{{item.author}}</view>
    <view class="ImgWrap">{{item.img}}</view>
    <view class="txt">{{item.txt}}</view>
  </view>
</div>
</view>

<view class="reply">
  <view class="reply_item">
    <view class="item_txt">评论</view>
    <view class="reply_time">{{reply_time}}</view>
  </view>
  <view class="head">
    <view class="avatar">
      <image src="nickName"  class="imageset" />
    </view>
    <view >
       <textarea placeholder='写下你的评论' maxlength='500' auto-focus  bindinput></textarea>
     </view>
  </view>
  <view class="foot">
    <div class="reply_a" wx:for="{{replyList}}" wx:key="item" data-set="{{item}}" wx:for-item="item" wx:for-index="index">
      <view class="avatar">
        <image src="{{item.avatarUrl}}" class="imageset" />
      </view>
      <view class="replyWrap">
        <view class="reply_author">{{item.name}}</view>
        <view class="reply_txt">{{item.txt}}</view>
      </view>
      <view class="taps" wx:for="{{commend}}" wx:key="item" data-set="{{item}}" wx:for-item="item" wx:for-index="index">
        <view class="interaction" bindtap="tocommand">
        <image src="{{item.icon}}" class="Img"></image>
        <view>{{item.number}}</view>
        </view>
      </view>
      <view class="taps" wx:for="{{like}}" wx:key="item" data-set="{{item}}" wx:for-item="item" wx:for-index="index">
        <view class="interaction" bindtap="tolike">
        <image src="{{item.icon}}" class="Img"></image>
        <view>{{item.number}}</view>
        </view>
      </view>
      <!-- <view class="actImgWrap">
      <image src="{{item.image}}" class="actImg"></image>
    </view>
    <view class="txtWrap">
      <view class="title">{{item.title}}</view>
      <view class="time">{{item.time}}</view>
    </view> -->
  </div>
  <view class="reply_b" wx:for="{{replyList}}" wx:key="item" data-set="{{item}}" wx:for-item="item" wx:for-index="index">
    <view class="avatar">
        <image src="{{item.avatarUrl}}" class="imageset" />
      </view>
      <view class="replyWrap">
        <view class="reply_author">{{item.name}}</view>
        <view class="reply_txt">{{item.txt}}</view>
      </view>
  </view>
  </view>

</view>
</view>
