.boxWrap{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  align-content: flex-start;
  width: 100%;
}
.boxWrap .wrap{
  width: 48%;
  height: 250rpx;
  position: relative;
  text-align: center;
  justify-content: center;
  border-radius: 8rpx;
  margin-bottom: -30rpx;
  margin-left: 10rpx;
}
.boxWrap .wrap .boxImg{
  width: 100%;
  height: 200rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  box-shadow: 2rpx 3rpx 10rpx 2rpx black;
}
.boxWrap .wrap .boxTxt{
  margin-top: -140rpx;
  color: white;
  font-size: 38rpx;
  font-weight: 600;
