.box{
  background-color:rgb(2, 68, 99) ;
  color:white;
  width: 700rpx;
  margin:10rpx auto;
  border-radius: 10rpx;
  box-shadow:  3rpx 9rpx 9rpx gray;
}
.setting{
  display: flex;
}
.img{
  width:200rpx;
  height:200rpx;
}
.detail{
  padding-left: 40rpx;
}
.title{
  margin-top: 10rpx;
}
.info{
  margin-top: 35rpx;
  font-size: 25rpx;
  font-weight:lighter;
  width:400rpx;
  word-wrap:break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}